<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs")  %>
    <link rel="stylesheet" href="/css/forms.css" />
  </head>
  <body class="flx-row-wrap">

    <!-- header -->
    <%- include("./partials/header.ejs")  %>

    <!-- main -->
    <article class="beside flx-row-wrap">
      <img src="/img/logo-mercado-liebre.svg" alt="logo image" id="logo-beside">
    </article>
  
    <main class="flx-col-wrap">
        <form class="register-form flx-col-wrap" action="/register-form" method="post">

            <div class="profile-img-section flx-col-wrap">
              <div class="profile-img-container">
                <img src="/img/user-img.svg" alt="user-image" id="profile-img">
              </div>
              <input type="file" id="add-img" name="profileImg" accept=".jpg, .jpeg, .png">
              <label class="flx-col-wrap" for="add-img">
                <i class="fa-solid fa-pencil"></i>
              </label>
            </div>

            <h3 class="personal-info-tittle">Información Personal:</h3>

            <div class="input-container flx-col-wrap" id="full-name-container">
                <input class="input-config" type="text" name="fullName" id="full-Name" required>
                <label class="label-config full-name-label" for="full-Name">Nombre y Apellido *</label>
            </div>
            <div class="input-container flx-col-wrap" id="user-email-container">
                <input class="input-config" type="email" name="userEmail" id="user-Email" required>
                <label class="label-config user-email-label" for="user-Email">Email *</label>
            </div>
            <div class="input-container flx-col-wrap" id="user-birthday-container">
                <input class="input-config" type="date" name="userBirthday" id="user-Birthday" required>
                <label class="label-config user-birthday-label" for="user-Birthday">Fecha de Nacimiento *</label>
            </div>
            <div class="input-container flx-col-wrap" id="user-adress-container">
                <input class="input-config" type="text" name="userAdress" id="user-Adress">
                <label class="label-config user-adress-label" for="user-Adress">Domicilio</label>
            </div>

            <h3 class="profile-tittle">Perfil de Usuario:</h3>
            
            <div class="input-container flx-row-nowrap" id="user-profile-container">
              <input type="radio" name="userProfile" id="user-profile-buyer" value="buyer" checked>
              <label for="user-profile-buyer">Comprador</label>
              <input type="radio" name="userProfile" id="user-profile-seller" value="seller">
              <label for="user-profile-seller">Vendedor</label>
              <span class="profile-selector"></span>
            </div>
            <div class="input-container flx-col-wrap" id="user-name-conatiner">
              <input class="input-config" type="text" name="userName" id="user-Name" required>
              <label class="label-config user-name-label" for="user-Name">Nombre de Usuario *</label>
            </div>
            <div class="input-container flx-col-wrap" id="user-password-conatiner">
              <input class="input-config" type="password" name="password" id="user-password" required>
              <label class="label-config user-password-label" for="user-password">Contraseña *</label>
            </div>
            <div class="input-container flx-col-wrap" id="user-confirm-pass-conatiner">
              <input class="input-config" type="password" name="confirmPassword" id="user-confirm-pass" required>
              <label class="label-config user-confirm-pass-label" for="user-confirm-pass">Confirmar Contraseña *</label>
            </div>

            <h3 class="interests-tittle">Categorías de interés:</h3>

            <div class="interests-container flx-row-wrap" id="user-interests-container">
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-1" value="1">
                <label class="interest-label" for="int-1">Electro</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-2" value="2">
                <label class="interest-label" for="int-2">Moda</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-3" value="3">
                <label class="interest-label" for="int-3">Hogar</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-4" value="4">
                <label class="interest-label" for="int-4">Juguetería</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-5" value="5">
                <label class="interest-label" for="int-5">Vida Sana</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
              <div class="interest-container flx-row-nowrap">
                <input type="checkbox" class="interest-input"name="userinterest" id="int-6" value="6">
                <label class="interest-label" for="int-6">Música</label>
                <div class="iterests-button flx-row-nowrap">
                  <div></div>
                </div>
              </div>
            </div>
            <div class="input-container flx-row-nowrap" id="forms-bts-container">
              <button  type="submit" id="submit-btn">Crear Usuario</button>
              <button type="reset" id="reset-btn">Borrar</button>
            </div>
        </form>
    </main>
    
    <!-- footer -->
    <%- include("./partials/footer.ejs") %>

    <script type="module" src="/js/register-form-controller"></script>
  </body>
</html>
